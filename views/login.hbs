<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/public/css/style.css">
    <title>{{ title }}</title>
    <style>
        body {
            background-color: #f0f2f5;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
            padding: 0;
        }

        .container {
            width: 90vw;
            height: 90vh;
            background-color: #ffffff;
            border-radius: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        .header {
            margin-bottom: 20px;
            text-align: center;
        }

        .header h1 {
            color: #74f120;
            font-size: 3em;
            margin-bottom: 20px;
        }

        .form-container button {
            margin-bottom: 5px; 
            background-color: #74f120;
            color: #fff;
            border: none;
            border-radius: 25px;
            font-size: 1.2em;
            cursor: pointer;
            transition: background-color 0.3s ease, transform 0.3s ease;
        }

        #googleLoginButton {
            margin-top: -10px;
            background-color: #198ded; 
            color: #fff;
            border: none;
            border-radius: 25px;
            font-size: 1.2em;
            cursor: pointer;
            transition: background-color 0.3s ease, transform 0.3s ease;
        }

        .form-container {
            width: 100%;
            max-width: 400px;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 10px;
            margin-top: 15px;
            border-radius: 25px;
            font-size: 1.2em;
        }

        .form-container input,
        .form-container button,
        .back-btn,
        #googleLoginButton {
            width: 100%;
            max-width: 350px;
            padding: 15px;
            box-sizing: border-box;
            
        }

        .form-container input {
            border: 1px solid #ccc;
            margin-bottom: 10px;
        }

        .form-container button:hover {
            background-color: #45a049;
            transform: translateY(-2px);
        }

        #googleLoginButton:hover{
            background-color: #88c1ed;
            transform: translateY(-2px);
        }

        .btn-group {
            display: flex;
            justify-content: center;
            width: 100%;
            max-width: 350px;
            margin-top: 50px; 
        }

        .btn-group a {
            background-color: #fff;
            color: #000;
            border: 2px solid #000;
            border-radius: 25px;
            text-align: center;
            text-decoration: none;
            font-size: 1.2em;
            transition: background-color 0.3s ease, transform 0.3s ease;
            display: inline-block;
            padding: 15px 20px; 
            margin: 0 10px;
            white-space: nowrap
        }

        .btn-group a:hover {
            background-color: #f0f2f5;
            transform: translateY(-2px);
        }

        .error-message {
            color: red;
            margin-bottom: 15px;
            font-size: 1.1em;
            font-weight: bold;
        }

        p {
            margin-top: 20px;
            color: #666;
        }

        a {
            text-decoration: none;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>Log In</h1>
        </div>

        <div class="form-container">
            <form action="/login" method="POST">
                <input type="texto" id="username" name="username" placeholder="ðŸ‘¤ Enter username" required>
                <input type="password" id="password" name="password" placeholder="ðŸ”’ Enter password" required>
                {{#if errorMessage}}
                <p class="error-message">{{errorMessage}}</p>
                {{/if}}
                <button type="submit" style="margin-bottom: 10px;">Login</button>
            </form>
            <button id="googleLoginButton" style="margin-top: -10px;">Sign in with Google</button>
        </div>

        <div class="btn-group">
            <a href="/" class="back-btn">Back to User Identification</a>
            <a href="/signup" class="signup-btn">Sign Up</a>
        </div>
    </div>

    <script src="https://www.gstatic.com/firebasejs/9.0.0/firebase-app-compat.js"></script>
    <script src="https://www.gstatic.com/firebasejs/9.0.0/firebase-auth-compat.js"></script>
    <script>
        const firebaseConfig = {
            apiKey: "AIzaSyAGvYIQWpV-k3_B6o6y6i34G2T_45NG5Iw",
            authDomain: "cs110-3510d.firebaseapp.com",
            projectId: "cs110-3510d",
            storageBucket: "cs110-3510d.appspot.com",
            messagingSenderId: "965182604106",
            appId: "1:965182604106:web:54e03b4d162eb8738437b3",
            measurementId: "G-NJ164KJQDN"
        };

        const app = firebase.initializeApp(firebaseConfig);
        const auth = firebase.auth();

        document.getElementById('googleLoginButton').addEventListener('click', async () => {
            const provider = new firebase.auth.GoogleAuthProvider();
            provider.setCustomParameters({ prompt: "select_account" });

            try {
                const result = await auth.signInWithPopup(provider);
                const email = result.user.email;

                const response = await fetch('/auth/google-login', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ email })
                });
                const data = await response.json();

                if (data.success) {
                    window.location.href = '/homepage';
                } else {
                    alert(data.message || 'Login failed');
                }
            } catch (error) {
                console.error('Error during Google login:', error);
                alert('Error during Google login');
            }
        });
    </script>
</body>
</html>
